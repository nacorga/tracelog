{
  "types": [
    {"type": "feat", "section": "✨ Features", "hidden": false},
    {"type": "fix", "section": "🐛 Bug Fixes", "hidden": false},
    {"type": "docs", "section": "📚 Documentation", "hidden": false},
    {"type": "style", "section": "💎 Styles", "hidden": false},
    {"type": "refactor", "section": "♻️ Code Refactoring", "hidden": false},
    {"type": "perf", "section": "⚡ Performance Improvements", "hidden": false},
    {"type": "test", "section": "✅ Tests", "hidden": false},
    {"type": "build", "section": "👷‍ Builds", "hidden": false},
    {"type": "ci", "section": "🔧 Continuous Integration", "hidden": false},
    {"type": "chore", "section": "📦 Chores", "hidden": false},
    {"type": "revert", "section": "⏪ Reverts", "hidden": false}
  ],
  "commitUrlFormat": "https://github.com/nacorga/tracelog-client/commit/{{hash}}",
  "compareUrlFormat": "https://github.com/nacorga/tracelog-client/compare/{{previousTag}}...{{currentTag}}",
  "issueUrlFormat": "https://github.com/nacorga/tracelog-client/issues/{{id}}",
  "skip": {
    "bump": false,
    "changelog": false,
    "commit": false,
    "tag": false
  },
  "releaseCommitMessageFormat": "chore(release): {{currentTag}} [skip ci]",
  "bumpFiles": [
    {
      "filename": "package.json",
      "type": "json"
    },
    {
      "filename": "package-lock.json",
      "type": "json"
    }
  ],
  "packageFiles": [
    {
      "filename": "package.json",
      "type": "json"
    }
  ],
  "header": "# 📦 Changelog\n\nAll notable changes to this project will be documented in this file.",
  "preset": "conventionalcommits",
  "conventionalcommits": {
    "includeInert": true,
    "skipUnstable": false,
    "parserOpts": {
      "mergePattern": "^Merge pull request #(\\d+) from (.*)$",
      "mergeCorrespondence": ["id", "source"]
    }
  }
}
